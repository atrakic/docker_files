# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

# Tab indentation (no size specified)
[{Makefile,*.go}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
